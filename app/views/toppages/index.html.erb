<% content_for :cover do %>
  <% if logged_in? %>
    <div id="nav-search">   
      <div class="search">
        <%= form_tag '/', :method => 'get' do %>
          <p>
           <%= text_field_tag :search, params[:search] %>
           <%= submit_tag "検索", :title => nil %>
          </p>
        <% end %>
      </div>
    </div>
    
    <div class="book-box">
      <h1>新着の本一覧</h1>
    </div>
    <%= render "books/books" , books: @books %>
  <% else %>
    <div class="cover">
      <div class="cover-inner">
        <div class="cover-contents">
          <div class="toppage-title">
            <h1>いらない本を、読みたい本に。</h1>
          </div>
          <%= link_to "Bookchangeを始める" , login_path ,class:"btn btn-start btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>