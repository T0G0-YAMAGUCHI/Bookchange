<div class="mew">
 <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
      <div class="panel panel-default">
        <div class="panel-heading">本を出品する</div>
        <div class="panel-body">
          <%= form_for(@book) do |f| %>
            <div class="form-group">
              <%= f.label :title, 'タイトル' %>
              <%= f.text_field :title, class: 'form-control' %>
            </div>
          
            <div class="form-group">
              <%= f.label :imagel %>
              <%= f.file_field :image %>
            </div>

            <div class="form-group">
              <%= f.label :explain, '説明' %>
              <%= f.text_area :explain, class: 'form-control' %>
            </div>

            <%= f.submit '出品', class: 'btn book-new btn-primary btn-lg' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>